{
  "name": "wyrihaximus/react-inspector",
  "description": "Inspect react/* packages for metrics and other insights                               ",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com",
      "homepage": "http://wyrihaximus.net/"
    }
  ],
  "require": {
    "php": "^7.2",
    "igorw/get-in": "^1.0",
    "joshdifabio/composed": "^1.0",
    "reactivex/rxphp": "^2.0",
    "wyrihaximus/get-in-packages-composer.jason": "dev-master"
  },
  "require-dev": {
    "api-clients/test-utilities": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "WyriHaximus\\React\\Inspector\\": "src/"
    },
    "files": ["src/bootstrap_include.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "WyriHaximus\\React\\Tests\\Inspector\\": "src/"
    }
  },
  "suggest": {
    "wyrihaximus/react-inspector-cpu-usage": "Measure the CPU usage of your application and it's child processes",
    "wyrihaximus/react-inspector-event-loop": "Measure what is going through the event loop",
    "wyrihaximus/react-inspector-stream": "Measure what is going through fread/fwrite calls from react/stream",
    "wyrihaximus/react-inspector-bunny": "Measure what is going through fread/fwrite calls from bunny/bunny"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "7.2"
    }
  },
  "extra": {
    "react-inspector": {
      "metrics": [
        "etc/config/app.php",
        "etc/config/bunny.php",
        "etc/config/http-server.php",
        "etc/config/supervisor.php"
      ]
    }
  },
  "scripts": {
    "ensure-installed": "composer install --ansi -n -q",
    "cs": [
      "@ensure-installed",
      "php-cs-fixer fix --config=.php_cs --ansi --dry-run --diff --verbose --allow-risky=yes --show-progress=estimating"
    ],
    "cs-fix": [
      "@ensure-installed",
      "php-cs-fixer fix --config=.php_cs --ansi --verbose --allow-risky=yes --show-progress=estimating"
    ],
    "unit": [
      "@ensure-installed",
      "phpunit --colors=always -c phpunit.xml.dist"
    ],
    "unit-coverage": [
      "@ensure-installed",
      "phpunit --colors=always -c phpunit.xml.dist --coverage-text --coverage-html covHtml --coverage-clover ./build/logs/clover.xml"
    ],
    "lint-php": [
      "@ensure-installed",
      "parallel-lint --exclude vendor ."
    ],
    "qa-all": [
      "@lint-php",
      "@cs",
      "@unit"
    ],
    "qa-all-coverage": [
      "@lint-php",
      "@cs",
      "@unit-coverage"
    ],
    "qa-windows": [
      "@lint-php",
      "@cs",
      "@unit"
    ],
    "qa-ci": [
      "@unit"
    ],
    "qa-ci-extended": [
      "@qa-all-coverage"
    ],
    "qa-ci-windows": [
      "@qa-windows"
    ],
    "qa-contrib": [
      "@qa-all"
    ],
    "ci-coverage": [
      "if [ -f ./build/logs/clover.xml ]; then wget https://scrutinizer-ci.com/ocular.phar && php ocular.phar code-coverage:upload --format=php-clover ./build/logs/clover.xml; fi"
    ]
  }
}
